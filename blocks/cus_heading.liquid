<div
  class="mk-media-banner-heading  text-{{ block.settings.title_size_pc }}  md:text-{{ block.settings.title_size_mb }}"
  style="--title-color: {{ block.settings.title_color | default:"#000" }};"
>
  {{ block.settings.heading }}
</div>


{% schema %}
{
  "name": "CUS Heading",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#F8F3ED"
    },
    {
      "type": "select",
      "id": "title_size_pc",
      "label": "Title Size PC",
      "options": [
        {
          "value": "24",
          "label": "24"
        },
        {
          "value": "28",
          "label": "28"
        },
        {
          "value": "32",
          "label": "32"
        },
        {
          "value": "36",
          "label": "36"
        },
        {
          "value": "40",
          "label": "40"
        },
        {
          "value": "48",
          "label": "48"
        }
      ],
      "default": "48"
    },
    {
      "type": "select",
      "id": "title_size_mb",
      "label": "Title Size Mobile",
      "options": [
        {
          "value": "24",
          "label": "24"
        },
        {
          "value": "28",
          "label": "28"
        },
        {
          "value": "32",
          "label": "32"
        },
        {
          "value": "36",
          "label": "36"
        },
        {
          "value": "40",
          "label": "40"
        }
      ],
      "default": "32"
    }
  ]
}
{% endschema %}
