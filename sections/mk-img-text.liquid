<style>
  .mk-img-text {
    padding-block: 60px;
  }
  .mk-img-text-title {
    text-align: center;
    margin: 0;
  }
  .mk-img-text-content {
    margin-top: 40px;
  }
  .mk-img-text-content{
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  @media (max-width: 767px) {
    .mk-img-text {
      padding-block: 40px;
    }
    .mk-img-text-content{
      gap: 12px;
    }
  }
</style>

<div class="mk-img-text color-{{ section.settings.color_scheme }}">
  <div class="mk-img-text-inner mk-container">
    {% if section.settings.title != blank %}
      <h2 class="mk-img-text-title text-{{ section.settings.title_size_pc }} md:text-{{ section.settings.title_size_mb }}">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <div class="mk-img-text-description">{{ section.settings.description }}</div>
    {% endif %}
    <div class="mk-img-text-content">
      {% content_for 'blocks' %}
    </div>
  </div>
</div>

