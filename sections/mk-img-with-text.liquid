
{% style %}

  .mk-img-with-text {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding-top: {% if section.settings.enable_padding_top %}80px{% else %}0{% endif %};
    padding-bottom: {% if section.settings.enable_padding_bottom %}80px{% else %}0{% endif %};
  }

  .mk-img-with-text__title {
    text-align: center;
    font-size: 48px;
    font-weight: 600;
    line-height: 110%;
    letter-spacing: -1.44px;
    color: #000000;
    margin-bottom: 48px;
  }

  .mk-img-with-text__block {
    display: flex;
    align-items: stretch;
  }

  .mk-img-with-text__block--reverse {
    flex-direction: row-reverse;
  }

  .mk-img-with-text__content {
    flex: 0 0 50%;
    padding: 20px 80px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100%;
  }

  .mk-img-with-text__heading {
    font-size: 28px;
    font-weight: 600;
    line-height: 130%;
    letter-spacing: -0.28px;
    color: #000000;
    margin-bottom: 12px;
  }

  .mk-img-with-text__text {
    font-size: 16px;
    line-height: 150%;
    letter-spacing: -0.16px;
    color: #404040;
    margin-bottom: 20px;
  }

  .mk-img-with-text__button {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 11px 32px;
    border-radius: 100px;
    text-decoration: none;
    font-size: 16px;
    line-height: 150%;
    letter-spacing: -0.16px;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  

  .mk-img-with-text__button:hover img {
    filter: brightness(0) invert(1);
  }

  .mk-img-with-text__button img {
    width: 20px !important;
    height: 20px !important;
    display: inline-block;
    vertical-align: middle;
  }

  .mk-img-with-text__image {
    flex: 0 0 50%;
    display: flex;
    align-items: center;
  }

  .mk-img-with-text__image img {
    width: 100%;
    height: auto;
  }

  .mk-img-with-text__image .placeholder {
    aspect-ratio: 16/10;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999999;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .mk-img-with-text {
      padding-top: {% if section.settings.enable_padding_top %}48px{% else %}0{% endif %};
      padding-bottom: {% if section.settings.enable_padding_bottom %}48px{% else %}0{% endif %};
    }

    .mk-img-with-text__title {
      font-size: 32px;
      margin-bottom: 20px;
      text-align: left;
    }

    .mk-img-with-text__block {
      flex-direction: column;
      margin-bottom: 16px;
    }

    .mk-img-with-text__block:last-child {
      margin-bottom: 0;
    }

    .mk-img-with-text__block--reverse {
      flex-direction: column;
    }

    .mk-img-with-text__content {
      order: 2;
    }

    .mk-img-with-text__image {
      order: 1;
    }

    .mk-img-with-text__content,
    .mk-img-with-text__image {
      flex: 0 0 100%;
      width: 100%;
    }

    .mk-img-with-text__content {
      padding: 32px 24px;
    }

    .mk-img-with-text__heading {
      font-size: 22px;
      margin-bottom: 12px;
    }

    .mk-img-with-text__text {
      font-size: 14px;
      margin-bottom: 16px;
    }

    .mk-img-with-text__button {
      font-size: 14px;
    }

    .mk-img-with-text__button:hover {
      background-color: #000000;
      color: #ffffff;
      border-color: #000000;
    }

    .mk-img-with-text__button:hover img {
      filter: brightness(0) invert(1);
    }
  }
{% endstyle %}

<div class="mk-img-with-text mk-page-width">
  {% if section.settings.title != blank %}
    <h2 class="mk-img-with-text__title">{{ section.settings.title }}</h2>
  {% endif %}

  {% for block in section.blocks %}
    <div
      class="mk-img-with-text__block{% if block.settings.layout == 'reverse' %} mk-img-with-text__block--reverse{% endif %}"
      {{ block.shopify_attributes }}
    >
      <div
        class="mk-img-with-text__content"
        style="background-color: {{ section.settings.block_background_color | default: '#ffffff' }};"
      >
        {% if block.settings.heading != blank %}
          <h3 class="mk-img-with-text__heading">{{ block.settings.heading }}</h3>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="mk-img-with-text__text">{{ block.settings.text }}</div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_url != blank %}
          <a href="{{ block.settings.button_url }}" class="mk-img-with-text__button mk-spx-button-secondary">
            {{ block.settings.button_text }}
            <img src="{{ 'icon-right.svg' | asset_url }}" alt="Arrow" width="20" height="20">
          </a>
        {% endif %}
      </div>

      <div class="mk-img-with-text__image">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url: width: 800 }}" 
              alt="{{ block.settings.image.alt | default: block.settings.heading }}" 
              loading="lazy" width="800" height="500">
        {% else %}
          <div class="placeholder">Select an image</div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

