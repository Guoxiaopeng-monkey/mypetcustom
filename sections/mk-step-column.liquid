{{ 'mk-step-column.css' | asset_url | stylesheet_tag }}

<div class="mk-step-column mk-container ">
  <div class="mk-step-column-title">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div
    class="mk-step-column-content"
    data-columns="{{ section.settings.step_columns }}"
  >
    {% for block in section.blocks %}
      <div class="mk-step-column-item" data-step="{{ forloop.index }}">
        <div class="mk-step-column-item-image">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 200 }}"
              alt="{{ block.settings.title | escape }}"
              width="100%"
              height="100%"
              loading="lazy"
            >
          {% else %}
            <div class="mk-step-placeholder">
              <span>{{ forloop.index }}</span>
            </div>
          {% endif %}
        </div>
        <div class="mk-step-column-item-content">
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "MK Step Column",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "step_column_gap",
      "label": "Step Column Gap",
      "default": 20,
      "min": 0,
      "max": 40,
      "step": 1
    },
    {
      "type": "range",
      "id": "step_columns",
      "label": "Step Columns",
      "default": 4,
      "min": 3,
      "max": 5,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "step_column",
      "name": "Step Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MK Step Column"
    }
  ]
}
{% endschema %}
