<section class="mk-why-section" data-section-id="{{ section.id }}">
  <div class="mk-container">
    <h2 class="mk-why-section__title">{{ section.settings.title | default: 'Why Buy Bulk From Us?' }}</h2>

    <div class="mk-why-grid">
      {% for block in section.blocks %}
        {% if block.type == 'advantage' %}
          {% render 'mk-why-item', block: block, index: forloop.index %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .mk-why-section {
    background-color: {{ section.settings.background_color | default: '#f9f9f9' }};
    padding:120px 0;
  }
  .mk-why-section__title{
    font-size: 40px;
    font-weight: 600;
    line-height: 110%;
    letter-spacing: -0.4px;
    margin-bottom: 20px;
    text-align: center;
  }

  .mk-why-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 32px;
    row-gap: 100px;
    margin: 0 auto;
    margin-top:80px;
  }
  .mk-why-grid > div{
    flex-basis: calc(calc(100% - 64px) / 3);
    min-width: 280px;
  }

  @media (max-width: 768px) {
    .mk-why-section{
      padding:48px 20px;
    }
    .mk-why-section .mk-container{
      margin:0;
    }
    .mk-why-section__title{
      font-size: 26px;
      max-width:calc(100% - 40px);
      margin:0 auto;
    }
    .mk-why-grid{
      row-gap: 20px;
      margin-top: 40px;
    }
    .mk-why-grid > div{
      flex-basis: 100%;
      min-width: 280px;
    }
  }
</style>

{% schema %}
{
  "name": "MK Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Buy Bulk From Us?"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    }
  ],
  "blocks": [
    {
      "type": "advantage",
      "name": "Advantage Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Advantage Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Advantage Title",
          "default": "Advantage"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Advantage Description",
          "default": "Brief description of the advantage."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MK Why Choose Us",
      "blocks": [
        {
          "type": "advantage",
          "settings": {
            "title": "Wholesale Pricing",
            "description": "Enjoy one of the most competitive commission rates in the industry, rewarding you with up to 15% on every successful referral."
          }
        },
        {
          "type": "advantage",
          "settings": {
            "title": "Authentic Product Guarantee",
            "description": "All our products are 100% authentic with manufacturer warranties included."
          }
        },
        {
          "type": "advantage",
          "settings": {
            "title": "Monthly Updates & Insights",
            "description": "Stay informed with regular market insights and product updates to maximize your business potential."
          }
        },
        {
          "type": "advantage",
          "settings": {
            "title": "Dedicated Customer Support",
            "description": "Our expert support team is available to assist you with any questions or concerns."
          }
        },
        {
          "type": "advantage",
          "settings": {
            "title": "Reliable Supply Chain",
            "description": "Count on our robust supply chain to ensure timely delivery and consistent product availability."
          }
        }
      ]
    }
  ]
}
{% endschema %}
